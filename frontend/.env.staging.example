# ==========================================
# AMBIENTE DE STAGING - NPS Síntegra
# ==========================================
# IMPORTANTE: Este arquivo é um TEMPLATE para staging
# Configure estas variáveis no Railway Dashboard
# ==========================================

# ==========================================
# DATABASE (Railway)
# ==========================================
DATABASE_URL=${{Postgres.DATABASE_URL}}

# ==========================================
# NEXTAUTH (Autenticação)
# ==========================================
NEXTAUTH_URL=${{RAILWAY_PUBLIC_DOMAIN}}
# Gerar com: openssl rand -base64 32
NEXTAUTH_SECRET="<GERAR_NOVA_SECRET_AQUI>"

# ==========================================
# EMAIL (Resend) - OPCIONAL em staging
# ==========================================
RESEND_API_KEY="re_staging_api_key"
RESEND_FROM_EMAIL="nps-staging@sintegra.com.br"
RESEND_FROM_NAME="Síntegra NPS [STAGING]"

# ==========================================
# STORAGE (Cloudinary) - OPCIONAL em staging
# ==========================================
CLOUDINARY_CLOUD_NAME="staging_cloud_name"
CLOUDINARY_API_KEY="staging_api_key"
CLOUDINARY_API_SECRET="staging_api_secret"
CLOUDINARY_UPLOAD_PRESET="nps_staging_uploads"

# ==========================================
# APP CONFIG
# ==========================================
NEXT_PUBLIC_APP_URL=${{RAILWAY_PUBLIC_DOMAIN}}
NEXT_PUBLIC_API_URL=${{RAILWAY_PUBLIC_DOMAIN}}/api
NODE_ENV=staging

# ==========================================
# FEATURES FLAGS (Staging)
# ==========================================
NEXT_PUBLIC_ENABLE_PWA=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DARK_MODE=false

# ==========================================
# NPS CONFIG
# ==========================================
NPS_TARGET_MEDICOS=50
NPS_TARGET_DISTRIBUIDORES=60
NPS_RESPONSE_EXPIRATION_DAYS=30
NPS_MAX_REMINDERS=3

# ==========================================
# RATE LIMITING (mais permissivo em staging)
# ==========================================
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_WINDOW_MS=60000

# ==========================================
# AUTENTICAÇÃO BÁSICA (Opcional)
# Para proteger ambiente staging
# ==========================================
# BASIC_AUTH_USER=staging
# BASIC_AUTH_PASSWORD=<senha_forte>
